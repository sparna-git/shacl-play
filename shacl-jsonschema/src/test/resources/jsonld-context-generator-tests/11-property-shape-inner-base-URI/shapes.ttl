@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix ex: <http://example.org/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .

ex:MainNodeShape
    a sh:NodeShape ;
    sh:targetClass ex:SimpleClass ;
    sh:property [
        sh:path ex:p ;
        sh:maxCount 1 ;
        sh:node ex:ValueNodeShape ;
    ] ;
    sh:property [
        sh:path ex:p2 ;
        sh:maxCount 1 ;
        sh:nodeKind sh:IRI;
        sh:pattern "https://www.example.com/authority/.*" ;
    ] ;
    sh:property [
        sh:path ex:p3 ;
        sh:maxCount 1 ;
        # should not go through
        sh:nodeKind sh:Literal;
        sh:pattern "[A-Z]" ;
    ] ;
    sh:property [
        sh:path ex:p4 ;
        sh:class ex:Class ;
    ] ;
    sh:property [
        sh:path ex:p5 ;
        sh:class ex:ClassAndShape ;
    ] ;
.

ex:ValueNodeShape a sh:NodeShape ;
    sh:nodeKind sh:IRI;
    sh:pattern "^https://data.europarl.europa.eu/eli/dl/doc/[A-Za-z0-9\\-_]+$" ;
.

ex:ValueNodeShape2 a sh:NodeShape ;
    sh:targetClass ex:Class ;
    sh:pattern "^https://data.europarl.europa.eu/eli/dl/doc/[A-Za-z0-9\\-_]+$" ;
.

ex:ClassAndShape a sh:NodeShape, rdfs:Class ;
    sh:pattern "^https://data.europarl.europa.eu/eli/dl/doc/[A-Za-z0-9\\-_]+$" ;
.
