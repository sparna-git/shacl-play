@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix ex: <http://example.org/> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .

ex:MainNodeShape
    a sh:NodeShape ;
    rdfs:label "Main Node Shape"@en ;
    sh:property [
        sh:path ex:property ;
        # This is necessary here for the context to properly apply with @type = @id
        sh:nodeKind sh:IRI ;
        sh:or (
            [ sh:node ex:ValueA ]
            [ sh:node ex:ValueB ]
        );
        sh:maxCount 1;
    ] ;
    sh:property [
        sh:path ex:otherProperty ;
        # This is necessary here for the context to properly apply with @type = @id
        sh:nodeKind sh:IRI ;
        sh:or (
            [ sh:node ex:ValueA ]
            [ sh:node ex:ValueB ]
        );
    ] ;
.

ex:ValueA
    a sh:NodeShape ;
    sh:nodeKind sh:IRI ;
    sh:pattern "^https://data.domain.org/A-.*$" ;
    skos:example "https://data.domain.org/A-1234" ;
.

ex:ValueB
    a sh:NodeShape ;
    sh:nodeKind sh:IRI ;
    sh:pattern "^https://data.domain.org/B-.*$" ;
    skos:example "https://data.domain.org/B-1234" ;
.