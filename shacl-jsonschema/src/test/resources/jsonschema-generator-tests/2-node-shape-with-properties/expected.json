{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "@context": {
      "$ref": "#/$defs/@context"
    },
    "data": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/MainNodeShape"
      }
    }
  },
  "additionalProperties": false,
  "required": ["@context", "data"],
  "$defs": {
    "@context": {
      "type": "string",
      "format": "iri-reference",
      "comment": "The URL of the JSON-LD @context"
    },
    "MainNodeShape": {
      "type": "object",
      "properties": {
        "id": {
            "format": "iri-reference",
            "type": "string"
        },
        "property1": {
          "type": "string"
        },
        "property2": {
          "type": "number"
        }
      },
      "required": ["id", "property1"]
    }
  }
}
