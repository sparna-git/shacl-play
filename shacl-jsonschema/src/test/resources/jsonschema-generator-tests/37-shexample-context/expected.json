{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "@context": {
      "$ref": "#/$defs/@context"
    },
    "data": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/MainNodeShape"
      }
    }
  },
  "additionalProperties": false,
  "required": ["@context", "data"],
  "$defs": {
    "@context": {},
    "MainNodeShape": {
      "type": "object",
      "required": ["id"],
      "properties": {
        "p": {
          "type": "string",
          "examples": ["event/MTG-PL-2023-10-17-PVCRE-ITM-7"],
          "pattern": "^event/MTG-PL-(?<date>(19[5-9][0-9]|20[0-9][0-9])-(0[1-9]|1[0-2])-(0[1-9]|[12][0-9]|3[01]))-PVCRE-ITM-[1-9]([0-9]{0,2})?$"
        },
        "id": {
          "format": "iri-reference",
          "type": "string"
        }
      }
    }
  }
}